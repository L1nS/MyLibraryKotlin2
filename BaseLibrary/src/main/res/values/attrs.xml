<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AppToolbarNormal">
        <attr name="toolbarBackground" format="reference|color" />
        <attr name="rightShow" format="enum">
            <enum name="button" value="1" />
            <enum name="text" value="2" />
            <enum name="image" value="3" />
        </attr>
        <attr name="backShow" format="boolean" />
        <attr name="backDrawable" format="reference" />
        <attr name="rightButtonText" format="string" />
        <attr name="rightButtonDrawable" format="reference|color" />
        <attr name="rightImageDrawable" format="reference" />
        <attr name="rightTextText" format="string" />
        <attr name="rightTextColor" format="reference|color" />
        <!--显示底部线条-->
        <attr name="bottomLineShow" format="boolean" />
        <attr name="bottomLineColor" format="reference|color" />
        <attr name="titleText" format="string" />
        <attr name="titleTextColor" format="reference|color" />
        <attr name="fitsSystemWindow" format="boolean" />
        <!--自定义顶部距离-->
        <attr name="marginStatusHeight" format="dimension" />
    </declare-styleable>
</resources>