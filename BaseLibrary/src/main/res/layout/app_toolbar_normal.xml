<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/id_rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/id_img_back"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="@dimen/toolbar_height"
                android:adjustViewBounds="true"
                android:padding="@dimen/qb_px_30"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/qb_px_140"
                android:layout_marginEnd="@dimen/qb_px_140"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorTextBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_tv_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_margin_lr"
                android:background="@drawable/shape_bg_fillet_theme"
                android:paddingLeft="@dimen/qb_px_18"
                android:paddingTop="@dimen/qb_px_10"
                android:paddingRight="@dimen/qb_px_18"
                android:paddingBottom="@dimen/qb_px_10"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="按钮" />

            <TextView
                android:id="@+id/id_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_margin_lr"
                android:paddingLeft="@dimen/qb_px_18"
                android:paddingTop="@dimen/qb_px_10"
                android:paddingRight="@dimen/qb_px_18"
                android:paddingBottom="@dimen/qb_px_10"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="文本" />

            <ImageView
                android:id="@+id/id_img_right"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="@dimen/toolbar_height"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:padding="@dimen/qb_px_22"
                android:visibility="gone"
                tools:src="@drawable/icon_back"/>
        </RelativeLayout>

        <View
            android:id="@+id/id_v_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLineGray"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>


</FrameLayout>